          <%-include ('./components/spare/search'); %>
        </div>
        <div
          style="height: 740px; background-color: rgb(255, 255, 255); margin-top: 3px;  border: solid 1px rgb(255, 255, 255) ;">
          <div class="tableFixHead">
            <div class="page-content" style=" margin-top: 0px;margin-left: 5px;">
              <div class="loader" id="load" style="display: none; margin: auto;margin-top: 0px;"></div>
